<!DOCTYPE html>
 <html>
    <head>
      <title>Alterar Dados o Paciente</title>
       <link href="material-icons.css" rel="stylesheet">
       <link type="text/css" rel="stylesheet" href="css/materialize.css"  media="screen,projection"/>
       <link type="text/css" rel="stylesheet" href="css/style.css"  media="screen,projection"/>
       <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>

    <body class="fundo-pagina">
       <header>
        <nav class="blue darken-2">
          <div class="nav-wrapper container">
            <a href="/home" class="brand-logo">Andador</a>
            <a href="" data-activates="nav-mobile" class="button-collapse">
              <i class="material-icons">menu</i>
            </a>
            <ul class="right">
              <i class="material-icons">battery_std</i>
            </ul>

            <ul id="nav" class="right hide-on-med-and-down">
              <li><a href="#">Iniciar nova sessão</a></li>
              <li><a class='dropdown-button' data-beloworigin="true" data-activates='dropdown-menu'>
                <i class="material-icons">more_vert</i>
              </a></li>
            </ul>
          </div>
        </nav>

        <ul class="side-nav" id="nav-mobile">
          <li><a class="waves-effect" href="/home">Home</a></li>
          <li><a class="waves-effect" href="/sessao?id_paciente=0">Iniciar sessão anônima</a></li>
          <li><a class="waves-effect" href="/sair">Sair</a></li>
        </ul>

        <ul id='dropdown-menu' class='dropdown-content'>
          <li><a href="/alterar-dados">Alterar dados</a></li>
          <li class="divider"></li>
          <li><a href="/sair">Sair</a></li>
        </ul>
      </header>
      <div class="card gray">
      <div class="card-content">
        <h5 class="titulo">Editar paciente</h5>
            <div id="div-editar-perfil" class="divider"></div>

            <div class="row">
                <form action="/editar-paciente" method="post">

                  <div class="row">
                    <div class="input-field col s12">
                      <input placeholder="Nome" id="nome" name="nome" type="text" value="<%=paciente[0].NOME_PACIENTE%>" class="validate">
                      <label for="nome">Nome completo</label>
                    </div>
                  </div>

                  <div class="row">
                    <div class="input-field col s6">
                        <select name="sexo">
                            <option value="" disabled selected>Sexo</option>
                            <option value="F">Feminino</option>
                            <option value="M">Masculino</option>
                        </select>
                        <label>Sexo</label>
                    </div>

                    <div class="input-field col s6">
                        <input type="text" name="data" class="datepicker">
                        <label>Data de nascimento</label>
                    </div>

                  </div>

                  <div class="row">
                    <div class="col s12 m6 botao_enviar">
                        <button class='btn green'>
                            Atualizar dados do paciente
                        </button>
                    </div>
                  </div>

                </form>
              </div>
      </div>
      </div>
      <footer class="page-footer black">
        <div class="right">
          © 2017 LaMIC
        <div>
      </footer>

      <script src="js/jquery.js"></script>
      <script src="js/materialize.js"></script>

      <script>
          $(document).ready(function(){
              $(".button-collapse").sideNav({
                  menuWidth: 300,
                  draggable: true
              });
          });
      </script>
      <script>
        $(document).ready(function(){
            $('.dropdown-button').dropdown({
              constrainWidth: false
            });
        });

      </script>
      <script>
        var data = new Date();
        $(document).ready(function(){
            $(".btn-menu").sideNav({
                menuWidth: 250
            });
        });
        $(document).ready(function() {
          $('select').val('<%=paciente[0].SEXO_PACIENTE%>');
          $('select').material_select();
        });
        $('.datepicker').pickadate({
            selectMonths: true,
            selectYears: 100,
            today: 'Hoje',
            clear: 'Limpar',
            close: 'Ok',
            closeOnSelect: false,
            format: 'dd/mm/yyyy',
            monthsShort: [ 'Jan', 'Fev', 'Mar', 'Abr', 'Mai', 'Jun', 'Jul', 'Ago', 'Set', 'Out', 'Nov', 'Dez' ],
            weekdaysFull: [ 'Domingo', 'Segunda-Feira', 'Terca-Feira', 'Quarta-Feira', 'Quinta-Feira', 'Sexta-Feira', 'Sabado' ],
            weekdaysShort: [ 'Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sab' ],
            weekdaysLetter: [ 'D', 'S', 'T', 'Q', 'Q', 'S', 'S' ],
            monthsFull: [ 'Janeiro', 'Fevereiro', 'Marco', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro' ],
            min: new Date(data.getFullYear() - 120, 0, 1),
            max: new Date(data.getFullYear() + 0, 11, 31)
        });
        $('.datepicker').val('<%=paciente[0].DATA_NASCIMENTO_PACIENTE%>');
    </script>

    </body>
</html>
