<!DOCTYPE html>
 <html>
    <head>
       <title>Andador</title>
       <link type="text/css" rel="stylesheet" href="css/materialize.css"  media="screen,projection"/>
       <link type="text/css" rel="stylesheet" href="css/style.css"  media="screen,projection"/>
       <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>

    <body class="blue darken-2">
      <div class="flex-div">
        <div class="row">
           <div class="col s12 white login-div z-depth-3">

              <% if(validacao.length > 0){%>
                <% for(var i = 0; i < validacao.length; i++) { %>
                  <p class="erro-login"><%=validacao[i].msg%><p>
                <%}%>
              <%}%>

              <form id="form-login" action="/autenticar" method="post">
                <h5 id="texto-login">Entrar</h5>
                <div class="row">
                   <div class="input-field col s12">
                      <input id="apelido" name="apelido" type="text" class="validate">
                      <label for="apelido">Apelido</label>
                   </div>
                </div>
                <div class="row">
                   <div class="input-field col s12">
                      <input id="senha" name="senha" type="password" class="validate">
                      <label for="senha">Senha</label>
                   </div>
                </div>
                <div class="row">
                   <div class="col s6">
                      <button class='btn light-blue darken-4' type="submit" form="form-login">
                          Entrar
                      </button>
                   </div>
                   <div class="col s4">
                      <a href="/cadastro" class="botao-cadastro">
                        <button class='btn green' type="button">
                          Cadastro
                        </button>
                      </a>
                   </div>
                </div>
              </form>

           </div>

        </div>
      </div>

      <footer class="page-footer black">
        <div class="right">
          Â© 2017 LaMIC
        <div>
      </footer>

      <script src="js/jquery.js"></script>
      <script src="js/materialize.js"></script>
    </body>
</html>
